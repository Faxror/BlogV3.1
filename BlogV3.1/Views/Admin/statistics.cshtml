@model EntityLayerr.Models.StatisticsViewModel
@using System.Globalization

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Stitch Design</title>
    <link href="data:image/x-icon;base64," rel="icon" type="image/x-icon" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link crossorigin="" href="https://fonts.gstatic.com/" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Newsreader:wght@400;500;700;800&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&amp;display=swap" rel="stylesheet" />
    <script>
              tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#1193d4",
                        "background-light": "#f6f7f8",
                        "background-dark": "#101c22",
                        "foreground-light": "#111618",
                        "foreground-dark": "#f6f7f8",
                        "card-light": "#ffffff",
                        "card-dark": "#182832",
                        "border-light": "#e3e8eb",
                        "border-dark": "#2d3f4d",
                        "muted-foreground-light": "#617c89",
                        "muted-foreground-dark": "#94a3b8"
                    },
                    fontFamily: {
                        "display": ["Newsreader"],
                        "sans": ["Inter", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.5rem",
                        "lg": "0.75rem",
                        "xl": "1rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
</head>
<body class="bg-background-light dark:bg-background-dark font-sans text-foreground-light dark:text-foreground-dark">
    <div class="flex min-h-screen w-full">
        @Html.Partial("_AdminStatics")
        <div class="flex flex-1 flex-col">
            <header class="sticky top-0 z-10 flex h-16 items-center justify-between border-b border-border-light dark:border-border-dark bg-background-light/80 dark:bg-background-dark/80 backdrop-blur-sm px-6">
                <div class="flex items-center gap-4">
                    <button class="lg:hidden">
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <line x1="3" x2="21" y1="12" y2="12"></line>
                            <line x1="3" x2="21" y1="6" y2="6"></line>
                            <line x1="3" x2="21" y1="18" y2="18"></line>
                        </svg>
                    </button>
                    <h1 class="text-xl font-semibold">İstatistikler</h1>
                </div>
                <div class="flex items-center gap-4">
                    <button class="flex items-center justify-center rounded-full size-10 bg-card-light dark:bg-card-dark hover:bg-primary/10 dark:hover:bg-primary/20 text-muted-foreground-light dark:text-muted-foreground-dark transition-colors">
                        <svg fill="currentColor" height="20px" viewBox="0 0 256 256" width="20px" xmlns="http://www.w3.org/2000/svg">
                            <path d="M221.8,175.94C216.25,166.38,208,139.33,208,104a80,80,0,1,0-160,0c0,35.34-8.26,62.38-13.81,71.94A16,16,0,0,0,48,200H88.81a40,40,0,0,0,78.38,0H208a16,16,0,0,0,13.8-24.06ZM128,216a24,24,0,0,1-22.62-16h45.24A24,24,0,0,1,128,216ZM48,184c7.7-13.24,16-43.92,16-80a64,64,0,1,1,128,0c0,36.05,8.28,66.73,16,80Z"></path>
                        </svg>
                    </button>
                    <div class="bg-center bg-no-repeat aspect-square bg-cover rounded-full size-10" style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuCPi0D1UHowynk8Wxc5sh7JL3e6M3jzeoitKFE9JJLyXpvjh6JgwtJMRVAOEFR-kxjpSW5tBFvhtbf7K0nMz_WfF0D1l5mKjDI0NgwpMuIpRmWtG9KhB-NrLgXxkX4HZLa0z1_vvFBAVy2A9S2Mhno4HDgc4mARRwq2X61obmIxWjZvjQZMLOlMk1YR9Y_BhKE5PZE3z8aSPmlHIcntSDeqi9UPRUgtDEs-vPefAQO5f6BIlX-Ysubrw2G9ffhKNvMrMzq0t9i711Su");'></div>
                </div>
            </header>
            <main class="flex-1 p-6">
                <div class="bg-card-light dark:bg-card-dark p-6 rounded-lg border border-border-light dark:border-border-dark">
                    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6">
                        <h2 class="text-xl font-semibold mb-2 sm:mb-0">Aylık Gönderi Sayısı</h2>
                        <form method="get" class="flex items-center gap-2">
                            <input type="date" name="startDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" class="border rounded-md px-2 py-1" />
                            <input type="date" name="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" class="border rounded-md px-2 py-1" />
                            <button class="px-3 py-1 text-sm rounded-md bg-primary/10 text-primary dark:bg-primary/20">Filtrele</button>
                        </form>
                    </div>

                    <div class="h-80 w-full">
                        <div class="h-full w-full flex flex-col">
                            <div class="flex-grow flex items-end space-x-4 px-4 pb-4 border-l border-b border-border-light dark:border-border-dark">
                                @{
                                    if (Model.MonthlyStats.Any())
                                    {
                                        var max = Model.MonthlyStats.Max(x => x.PostCount);
                                        @foreach (var item in Model.MonthlyStats)
                                        {
                                            var height = (item.PostCount / (double)max) * 16;
                                                <div class="flex flex-col items-center space-y-1 group relative">
                                                      <div class="bg-primary rounded-t-md w-8 relative group-hover:bg-primary/80 transition"
                                                           style="height:@(height)rem"
                                                           title="@item.PostCount gönderi">
                                                      </div>
                                                <span class="text-xs text-muted-foreground-light dark:text-muted-foreground-dark">@item.Month.Substring(0, 3)</span>
                                                <div class="absolute bottom-full mb-2 hidden group-hover:flex px-2 py-1 rounded-md bg-primary text-white text-xs shadow-md whitespace-nowrap">
                                                    @item.Month: @item.PostCount gönderi
                                                </div>
                                            </div>
                                        }

                                    }
                                    else
                                    {
                                        <p class="text-muted-foreground-light">Bu aralıkta gönderi bulunamadı.</p>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-6 bg-card-light dark:bg-card-dark p-6 rounded-lg border border-border-light dark:border-border-dark">
                    <h2 class="text-xl font-semibold mb-4">Aylara Göre Gönderi Listesi</h2>
                    <ul class="space-y-3">
                        @foreach (var item in Model.MonthlyStats)
                        {
                            <li class="flex justify-between items-center py-2 border-b border-border-light dark:border-border-dark">
                                <span class="font-medium">@item.Month</span>
                                <span class="text-muted-foreground-light dark:text-muted-foreground-dark">@item.PostCount gönderi</span>
                            </li>
                        }
                    </ul>
                </div>
            </main>
        </div>
    </div>

</body>
</html>