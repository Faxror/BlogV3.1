@model IEnumerable<EntityLayerr.Concrate.Blogs>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <link crossorigin="" href="https://fonts.gstatic.com/" rel="preconnect" />
    <link as="style" href="https://fonts.googleapis.com/css2?display=swap&amp;family=Newsreader%3Awght%40400%3B500%3B700%3B800" onload="this.rel='stylesheet'" rel="stylesheet" />
    <title>Blog Kontrol Paneli</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
         tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#1193d4",
                        "background-light": "#f6f7f8",
                        "background-dark": "#101c22",
                        "foreground-light": "#111618",
                        "foreground-dark": "#f6f7f8",
                        "card-light": "#ffffff",
                        "card-dark": "#182832",
                        "border-light": "#e3e8eb",
                        "border-dark": "#2d3f4d",
                        "muted-foreground-light": "#617c89",
                        "muted-foreground-dark": "#94a3b8"
                    },
                    fontFamily: {
                        "display": ["Newsreader"],
                        "sans": ["Inter", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.5rem",
                        "lg": "0.75rem",
                        "xl": "1rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
</head>
<body class="bg-background-light dark:bg-background-dark font-display">
    <div class="flex min-h-screen w-full">
        @Html.Partial("_AdminStatics")
        <main class="flex-1 p-8 overflow-y-auto">
            <div class="flex items-center justify-between mb-8">
                <h1 class="text-3xl font-bold text-background-dark dark:text-background-light">Yazıları Yönet</h1>
                <div class="flex items-center space-x-4">
                    <div class="relative">
                        <input class="w-64 pl-10 pr-4 py-2 text-sm border border-primary/20 dark:border-primary/30 rounded-lg bg-background-light dark:bg-background-dark text-background-dark dark:text-background-light focus:ring-primary focus:border-primary" placeholder="Yazılarda ara..." type="text" />
                        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-background-dark/50 dark:text-background-light/50">search</span>
                    </div>
                    <button class="flex items-center px-4 py-2 text-sm font-medium rounded-lg border border-primary/20 dark:border-primary/30 hover:bg-primary/10 dark:hover:bg-primary/20 text-background-dark dark:text-background-light">
                        <span class="material-symbols-outlined mr-2">filter_list</span>
                        Filtrele
                    </button>
                </div>
            </div>
            <div class="bg-card-light dark:bg-card-dark p-6 rounded-lg border border-border-light dark:border-border-dark">

                <table class="w-full text-left">
                    <thead>
                        <tr>
                            <th class="px-6 py-3" scope="col">Başlık</th>
                            <th class="px-6 py-3" scope="col">Yazar</th>
                            <th class="px-6 py-3" scope="col">Yayın Tarihi</th>
                            <th class="px-6 py-3" scope="col">Durum</th>
                            <th class="px-6 py-3" scope="col">Eylemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var blog in Model) {
                        <tr class="border-b border-primary/10 dark:border-primary/20">
                            <th class="px-6 py-4 font-medium whitespace-nowrap text-background-dark dark:text-background-light" scope="row">@blog.BlogTitle</th>
                                <td class="px-6 py-4 text-background-dark/80 dark:text-background-light/80">
                                    @(ViewBag.Authors.ContainsKey(blog.AuthorID) ? ViewBag.Authors[blog.AuthorID] : "Bilinmiyor")
                                </td>
                                <td class="px-6 py-4 text-background-dark/80 dark:text-background-light/80">@blog.BlogTime.ToString("dd.MM.yyyy")</td>
                              <td class="px-6 py-4">
                                 @if (blog.status)
                                    {
                                        <span class="px-2 py-1 text-xs font-medium rounded-full bg-primary/20 dark:bg-primary/30 text-primary">Yayınlandı</span>

                                    }
                                    else 
                                    {
                                        <span class="px-2 py-1 text-xs font-medium rounded-full bg-primary/20 dark:bg-primary/30 text-primary">Taslak</span>

                                    }
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center space-x-2">
                                        <a href="@Url.Action("EditBlog", "Admin", new { id = blog.Id })"
                                           class="p-1 text-background-dark/60 dark:text-background-light/60 hover:text-primary">
                                            <span class="material-symbols-outlined">edit</span>
                                        </a>

                                        <a href="@Url.Action("DeleteBlog", "Admin", new { id = blog.Id })"
                                           class="p-1 text-background-dark/60 dark:text-background-light/60 hover:text-primary">
                                            <span class="material-symbols-outlined">delete</span>
                                        </a>
                                </div>
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
            <div class="flex justify-between items-center mt-4">
                <p class="text-sm text-background-dark/60 dark:text-background-light/60">5 sonuçtan 1-5 arası gösteriliyor</p>
                <div class="flex items-center space-x-1">
                    <button class="p-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 disabled:opacity-50" disabled=""><span class="material-symbols-outlined">chevron_left</span></button>
                    <button class="p-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20"><span class="material-symbols-outlined">chevron_right</span></button>
                </div>
            </div>
        </main>
    </div>

</body>
</html>