@model IEnumerable<EntityLayerr.Concrate.Blogs>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <link crossorigin="" href="https://fonts.gstatic.com/" rel="preconnect" />
    <link as="style" href="https://fonts.googleapis.com/css2?display=swap&amp;family=Newsreader%3Awght%40400%3B500%3B700%3B800" onload="this.rel='stylesheet'" rel="stylesheet" />
    <title>Blog Kontrol Paneli</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
          darkMode: "class",
          theme: {
            extend: {
              colors: {
                "primary": "#1193d4",
                "background-light": "#f6f7f8",
                "background-dark": "#101c22",
              },
              fontFamily: {
                "display": ["Newsreader"]
              },
              borderRadius: {
                "DEFAULT": "0.25rem",
                "lg": "0.5rem",
                "xl": "0.75rem",
                "full": "9999px"
              },
            },
          },
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
</head>
<body class="bg-background-light dark:bg-background-dark font-display">
    <div class="flex h-screen">
        <aside class="w-64 flex-col border-r border-border-light dark:border-border-dark bg-card-light dark:bg-card-dark hidden lg:flex">
            <div class="p-6 flex items-center gap-3">
                <div class="size-8 text-primary">
                </div>
                <h2 class="text-xl font-bold font-display">Yönetim Paneli</h2>
            </div>
            <nav class="flex flex-col gap-1 p-4">
                <a class="flex items-center gap-3 rounded-md bg-primary/10 dark:bg-primary/20 px-3 py-2 text-primary dark:text-primary transition-colors" href="#">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                    </svg>
                    <span>Anasayfa</span>
                </a>

                <a class="flex items-center gap-3 rounded-md px-3 py-2 text-muted-foreground-light dark:text-muted-foreground-dark hover:bg-primary/10 dark:hover:bg-primary/20 hover:text-foreground-light dark:hover:text-foreground-dark transition-colors" href="#">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                        <polyline points="14 2 14 8 20 8"></polyline>
                        <line x1="16" x2="8" y1="13" y2="13"></line>
                        <line x1="16" x2="8" y1="17" y2="17"></line>
                        <polyline points="10 9 9 9 8 9"></polyline>
                    </svg>
                    <span>Yazılar</span>
                </a>
                <a class="flex items-center gap-3 rounded-md px-3 py-2 text-muted-foreground-light dark:text-muted-foreground-dark hover:bg-primary/10 dark:hover:bg-primary/20 hover:text-foreground-light dark:hover:text-foreground-dark transition-colors" href="#">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
                    </svg>
                    <span>İstatistikler</span>
                </a>
                <a class="flex items-center gap-3 rounded-md px-3 py-2 text-muted-foreground-light dark:text-muted-foreground-dark hover:bg-primary/10 dark:hover:bg-primary/20 hover:text-foreground-light dark:hover:text-foreground-dark transition-colors" href="#">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                    <span>Kullanıcılar</span>
                </a>
            </nav>
            <div class="mt-auto p-4">
                <a class="flex items-center gap-3 rounded-md px-3 py-2 text-muted-foreground-light dark:text-muted-foreground-dark hover:bg-primary/10 dark:hover:bg-primary/20 hover:text-foreground-light dark:hover:text-foreground-dark transition-colors" href="#">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 0 2l-.15.08a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.38a2 2 0 0 0-.73-2.73l-.15-.1a2 2 0 0 1 0-2l.15-.08a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"></path>
                        <circle cx="12" cy="12" r="3"></circle>
                    </svg>
                    <span>Ayarlar</span>
                </a>
            </div>
        </aside>
        <main class="flex-1 p-8 overflow-y-auto">
            <div class="flex items-center justify-between mb-8">
                <h1 class="text-3xl font-bold text-background-dark dark:text-background-light">Yazıları Yönet</h1>
                <div class="flex items-center space-x-4">
                    <div class="relative">
                        <input class="w-64 pl-10 pr-4 py-2 text-sm border border-primary/20 dark:border-primary/30 rounded-lg bg-background-light dark:bg-background-dark text-background-dark dark:text-background-light focus:ring-primary focus:border-primary" placeholder="Yazılarda ara..." type="text" />
                        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-background-dark/50 dark:text-background-light/50">search</span>
                    </div>
                    <button class="flex items-center px-4 py-2 text-sm font-medium rounded-lg border border-primary/20 dark:border-primary/30 hover:bg-primary/10 dark:hover:bg-primary/20 text-background-dark dark:text-background-light">
                        <span class="material-symbols-outlined mr-2">filter_list</span>
                        Filtrele
                    </button>
                </div>
            </div>
            <div class="overflow-x-auto bg-background-light dark:bg-background-dark border border-primary/20 dark:border-primary/30 rounded-lg shadow-sm">
                <table class="w-full text-sm text-left text-background-dark dark:text-background-light">
                    <thead class="text-xs uppercase bg-primary/10 dark:bg-primary/20 text-background-dark dark:text-background-light">
                        <tr>
                            <th class="px-6 py-3" scope="col">
                                <input class="w-4 h-4 text-primary bg-background-light border-primary/30 rounded focus:ring-primary dark:focus:ring-primary dark:ring-offset-background-dark focus:ring-2 dark:bg-background-dark dark:border-primary/50" type="checkbox" />
                            </th>
                            <th class="px-6 py-3" scope="col">Başlık</th>
                            <th class="px-6 py-3" scope="col">Yazar</th>
                            <th class="px-6 py-3" scope="col">Yayın Tarihi</th>
                            <th class="px-6 py-3" scope="col">Durum</th>
                            <th class="px-6 py-3" scope="col">Eylemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var blog in Model) {
                        <tr class="border-b border-primary/10 dark:border-primary/20">
                            <td class="px-6 py-4">
                                <input class="w-4 h-4 text-primary bg-background-light border-primary/30 rounded focus:ring-primary dark:focus:ring-primary dark:ring-offset-background-dark focus:ring-2 dark:bg-background-dark dark:border-primary/50" type="checkbox" />
                            </td>
                            <th class="px-6 py-4 font-medium whitespace-nowrap text-background-dark dark:text-background-light" scope="row">@blog.BlogTitle</th>
                                <td class="px-6 py-4 text-background-dark/80 dark:text-background-light/80">
                                    @(ViewBag.Authors.ContainsKey(blog.AuthorID) ? ViewBag.Authors[blog.AuthorID] : "Bilinmiyor")
                                </td>
                                <td class="px-6 py-4 text-background-dark/80 dark:text-background-light/80">@blog.BlogTime.ToString("dd.MM.yyyy")</td>
                              <td class="px-6 py-4">
                                 @if (blog.status)
                                    {
                                        <span class="px-2 py-1 text-xs font-medium rounded-full bg-primary/20 dark:bg-primary/30 text-primary">Yayınlandı</span>

                                    }
                                    else 
                                    {
                                        <span class="px-2 py-1 text-xs font-medium rounded-full bg-primary/20 dark:bg-primary/30 text-primary">Taslak</span>

                                    }
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center space-x-2">
                                        <a href="@Url.Action("EditBlog", "Admin", new { id = blog.Id })"
                                           class="p-1 text-background-dark/60 dark:text-background-light/60 hover:text-primary">
                                            <span class="material-symbols-outlined">edit</span>
                                        </a>

                                        <a href="@Url.Action("DeleteBlog", "Admin", new { id = blog.Id })"
                                           class="p-1 text-background-dark/60 dark:text-background-light/60 hover:text-primary">
                                            <span class="material-symbols-outlined">delete</span>
                                        </a>
                                </div>
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
            <div class="flex justify-between items-center mt-4">
                <p class="text-sm text-background-dark/60 dark:text-background-light/60">5 sonuçtan 1-5 arası gösteriliyor</p>
                <div class="flex items-center space-x-1">
                    <button class="p-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20 disabled:opacity-50" disabled=""><span class="material-symbols-outlined">chevron_left</span></button>
                    <button class="p-2 rounded-lg hover:bg-primary/10 dark:hover:bg-primary/20"><span class="material-symbols-outlined">chevron_right</span></button>
                </div>
            </div>
        </main>
    </div>

</body>
</html>