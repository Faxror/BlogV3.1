@using BlogV3._1.Models
@model UserEditYouViewModel


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Blog | Ayarlar</title>
    <link href="data:image/x-icon;base64," rel="icon" type="image/x-icon" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link crossorigin="" href="https://fonts.gstatic.com/" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Newsreader:wght@400;500;700;800&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&amp;display=swap" rel="stylesheet" />
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#1193d4",
                        "background-light": "#f6f7f8",
                        "background-dark": "#101c22",
                        "foreground-light": "#111618",
                        "foreground-dark": "#f6f7f8",
                        "card-light": "#ffffff",
                        "card-dark": "#182832",
                        "border-light": "#e3e8eb",
                        "border-dark": "#2d3f4d",
                        "muted-foreground-light": "#617c89",
                        "muted-foreground-dark": "#94a3b8"
                    },
                    fontFamily: {
                        "display": ["Newsreader"],
                        "sans": ["Inter", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.5rem",
                        "lg": "0.75rem",
                        "xl": "1rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
</head>
<body class="bg-background-light dark:bg-background-dark font-sans text-foreground-light dark:text-foreground-dark">
    <div class="flex min-h-screen w-full">
        @Html.Partial("_AdminStatics")
        <div class="flex flex-1 flex-col">
            <header class="sticky top-0 z-10 flex h-16 items-center justify-between border-b border-border-light dark:border-border-dark bg-background-light/80 dark:bg-background-dark/80 backdrop-blur-sm px-6">
                <div class="flex items-center gap-4">
                    <button class="lg:hidden">
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <line x1="3" x2="21" y1="12" y2="12"></line>
                            <line x1="3" x2="21" y1="6" y2="6"></line>
                            <line x1="3" x2="21" y1="18" y2="18"></line>
                        </svg>
                    </button>
                    <h1 class="text-xl font-semibold">Kullanıcı Ayarları</h1>
                </div>
                <div class="flex items-center gap-4">
                    <button class="flex items-center justify-center rounded-full size-10 bg-card-light dark:bg-card-dark hover:bg-primary/10 dark:hover:bg-primary/20 text-muted-foreground-light dark:text-muted-foreground-dark transition-colors">
                        <svg fill="currentColor" height="20px" viewBox="0 0 256 256" width="20px" xmlns="http://www.w3.org/2000/svg">
                            <path d="M221.8,175.94C216.25,166.38,208,139.33,208,104a80,80,0,1,0-160,0c0,35.34-8.26,62.38-13.81,71.94A16,16,0,0,0,48,200H88.81a40,40,0,0,0,78.38,0H208a16,16,0,0,0,13.8-24.06ZM128,216a24,24,0,0,1-22.62-16h45.24A24,24,0,0,1,128,216ZM48,184c7.7-13.24,16-43.92,16-80a64,64,0,1,1,128,0c0,36.05,8.28,66.73,16,80Z">
                            </path>
                        </svg>
                    </button>
                    <div class="bg-center bg-no-repeat aspect-square bg-cover rounded-full size-10" style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuCPi0D1UHowynk8Wxc5sh7JL3e6M3jzeoitKFE9JJLyXpvjh6JgwtJMRVAOEFR-kxjpSW5tBFvhtbf7K0nMz_WfF0D1l5mKjDI0NgwpMuIpRmWtG9KhB-NrLgXxkX4HZLa0z1_vvFBAVy2A9S2Mhno4HDgc4mARRwq2X61obmIxWjZvjQZMLOlMk1YR9Y_BhKE5PZE3z8aSPmlHIcntSDeqi9UPRUgtDEs-vPefAQO5f6BIlX-Ysubrw2G9ffhKNvMrMzq0t9i711Su");'></div>
                </div>
            </header>
            <main class="flex-1 p-6">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <div class="bg-card-light dark:bg-card-dark p-6 rounded-lg border border-border-light dark:border-border-dark">
                        <h3 class="text-xl font-semibold mb-4">Profil Bilgileri</h3>
                        <div class="flex items-center gap-6 mb-6">
                            <div class="relative">
                                <div class="bg-center bg-no-repeat aspect-square bg-cover rounded-full size-24" style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuCPi0D1UHowynk8Wxc5sh7JL3e6M3jzeoitKFE9JJLyXpvjh6JgwtJMRVAOEFR-kxjpSW5tBFvhtbf7K0nMz_WfF0D1l5mKjDI0NgwpMuIpRmWtG9KhB-NrLgXxkX4HZLa0z1_vvFBAVy2A9S2Mhno4HDgc4mARRwq2X61obmIxWjZvjQZMLOlMk1YR9Y_BhKE5PZE3z8aSPmlHIcntSDeqi9UPRUgtDEs-vPefAQO5f6BIlX-Ysubrw2G9ffhKNvMrMzq0t9i711Su");'></div>
                                <button class="absolute bottom-0 right-0 bg-primary text-white rounded-full p-2 hover:bg-primary/90 transition-colors">
                                    <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M12 20h9"></path>
                                        <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path>
                                    </svg>
                                </button>
                            </div>
                            <div>
                                <h4 class="text-lg font-bold">@Model.FullName</h4>
                                <p class="text-sm text-muted-foreground-light dark:text-muted-foreground-dark"></p>
                            </div>
                        </div>
                        <div class="space-y-4">
                            <form asp-action="UpdateProfile" method="post" class="space-y-4">
                                <div>
                                    <label class="block text-sm font-medium text-muted-foreground-light dark:text-muted-foreground-dark" for="fullName">Tam İsim</label>
                                    <input class="mt-1 block w-full rounded-md border-border-light dark:border-border-dark bg-background-light dark:bg-background-dark shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" id="fullName" type="text" value="Ahmet Yılmaz" />
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-muted-foreground-light dark:text-muted-foreground-dark" for="email">E-posta</label>
                                    <input class="mt-1 block w-full rounded-md border-border-light dark:border-border-dark bg-background-light dark:bg-background-dark shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" id="email" type="email" value="ahmet.yilmaz@example.com" />
                                </div>
                                <div class="flex justify-end pt-4">
                                    <button class="flex items-center justify-center rounded-lg h-10 px-6 bg-primary text-white text-sm font-bold hover:bg-primary/90 transition-colors">
                                        Değişiklikleri Kaydet
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="bg-card-light dark:bg-card-dark p-6 rounded-lg border border-border-light dark:border-border-dark">
                        <h3 class="text-xl font-semibold mb-4">Güvenlik</h3>
                        <div class="space-y-4">
                            <form asp-action="ChangePassword" method="post" class="space-y-4">
                                <div>
                                    <label class="block text-sm font-medium text-muted-foreground-light dark:text-muted-foreground-dark" for="currentPassword">Mevcut Şifre</label>
                                    <input class="mt-1 block w-full rounded-md border-border-light dark:border-border-dark bg-background-light dark:bg-background-dark shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" id="currentPassword" type="password" />
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-muted-foreground-light dark:text-muted-foreground-dark" for="newPassword">Yeni Şifre</label>
                                    <input class="mt-1 block w-full rounded-md border-border-light dark:border-border-dark bg-background-light dark:bg-background-dark shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" id="newPassword" type="password" />
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-muted-foreground-light dark:text-muted-foreground-dark" for="confirmPassword">Yeni Şifreyi Onayla</label>
                                    <input class="mt-1 block w-full rounded-md border-border-light dark:border-border-dark bg-background-light dark:bg-background-dark shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" id="confirmPassword" type="password" />
                                </div>

                                <div class="flex justify-end pt-4">
                                    <button class="flex items-center justify-center rounded-lg h-10 px-6 bg-primary text-white text-sm font-bold hover:bg-primary/90 transition-colors">
                                        Şifreyi Güncelle
                                    </button>
                                </div>
                            </form>
                            <form asp-action="ToggleTwoFactor" method="post">
                                <div class="border-t border-border-light dark:border-border-dark pt-4 mt-4">
                                    <h4 class="font-semibold mb-2">İki Faktörlü Kimlik Doğrulama</h4>
                                    <div class="flex items-center justify-between">
                                        <p class="text-sm text-muted-foreground-light dark:text-muted-foreground-dark">Hesabınıza ek bir güvenlik katmanı ekleyin.</p>
                                        <button class="flex items-center justify-center rounded-lg h-10 px-6 bg-primary text-white text-sm font-bold hover:bg-primary/90 transition-colors">
                                            @(Model.IsTwoFactorEnabled ? "Devre Dışı Bırak" : "Etkinleştir")
                                        </button>
                                    </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="bg-card-light dark:bg-card-dark p-6 rounded-lg border border-border-light dark:border-border-dark">
                    <h3 class="text-xl font-semibold mb-4">Bildirimler</h3>
                    <div class="space-y-4">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="font-medium">E-posta Bildirimleri</p>
                                <p class="text-sm text-muted-foreground-light dark:text-muted-foreground-dark">Yeni yorumlar ve beğeniler hakkında bilgi alın.</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input checked="" class="sr-only peer" type="checkbox" />
                                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/50 dark:peer-focus:ring-primary/80 rounded-full peer dark:bg-border-dark peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-primary"></div>
                            </label>
                        </div>
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="font-medium">Anlık Bildirimler</p>
                                <p class="text-sm text-muted-foreground-light dark:text-muted-foreground-dark">Tarayıcınız üzerinden anlık bildirimler alın.</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input class="sr-only peer" type="checkbox" />
                                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/50 dark:peer-focus:ring-primary/80 rounded-full peer dark:bg-border-dark peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-primary"></div>
                            </label>
                        </div>
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="font-medium">Haftalık Bülten</p>
                                <p class="text-sm text-muted-foreground-light dark:text-muted-foreground-dark">Haftanın en iyi yazılarını kaçırmayın.</p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input checked="" class="sr-only peer" type="checkbox" />
                                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/50 dark:peer-focus:ring-primary/80 rounded-full peer dark:bg-border-dark peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-primary"></div>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="bg-red-50 dark:bg-red-900/20 p-6 rounded-lg border border-red-200 dark:border-red-900">
                    <h3 class="text-xl font-semibold text-red-800 dark:text-red-200 mb-4">Hesabı Sil</h3>
                    <p class="text-sm text-red-700 dark:text-red-300 mt-2">Hesabınızı sildiğinizde tüm verileriniz kalıcı olarak silinecektir. Bu işlem geri alınamaz.</p>
                    <div class="flex items-start space-x-3 mt-4">
                        <input class="h-4 w-4 rounded border-red-300 text-red-600 focus:ring-red-500 mt-1" id="confirmDelete" type="checkbox" />
                        <label class="text-sm text-red-700 dark:text-red-300" for="confirmDelete">Bu işlemin geri alınamaz olduğunu anlıyorum ve hesabımı kalıcı olarak silmek istiyorum.</label>
                    </div>
                    <div class="flex justify-end mt-4">
                        <form asp-action="DeleteUser" method="post" class="space-y-4">
                            <input type="hidden" asp-for="Id" />
                            <button class="w-full md:w-auto flex items-center justify-center rounded-lg h-10 px-6 bg-red-600 text-white text-sm font-bold hover:bg-red-700 transition-colors disabled:bg-red-300 dark:disabled:bg-red-800 disabled:cursor-not-allowed">
                                Hesabımı Sil
                            </button>
                        </form>
                    </div>
                </div>
        </div>
        </main>
    </div>
    </div>
</body>
</html>