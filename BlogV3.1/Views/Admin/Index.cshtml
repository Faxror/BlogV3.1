@model IEnumerable<EntityLayerr.Concrate.Blogs>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <link crossorigin="" href="https://fonts.gstatic.com/" rel="preconnect" />
    <link as="style" href="https://fonts.googleapis.com/css2?display=swap&amp;family=Newsreader%3Awght%40400%3B500%3B700%3B800" onload="this.rel='stylesheet'" rel="stylesheet" />
    <title>Blog Kontrol Paneli</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
          darkMode: "class",
          theme: {
            extend: {
              colors: {
                "primary": "#1193d4",
                "background-light": "#f6f7f8",
                "background-dark": "#101c22",
              },
              fontFamily: {
                "display": ["Newsreader"]
              },
              borderRadius: {
                "DEFAULT": "0.25rem",
                "lg": "0.5rem",
                "xl": "0.75rem",
                "full": "9999px"
              },
            },
          },
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
</head>
<body class="bg-background-light dark:bg-background-dark font-display">
    <div class="flex h-screen">
        <aside class="w-64 flex-col border-r border-border-light dark:border-border-dark bg-card-light dark:bg-card-dark hidden lg:flex">
            <div class="p-6 flex items-center gap-3">
                <div class="size-8 text-primary">
                </div>
                <h2 class="text-xl font-bold font-display">Yönetim Paneli</h2>
            </div>
            <nav class="flex flex-col gap-1 p-4">
                <a class="flex items-center gap-3 rounded-md bg-primary/10 dark:bg-primary/20 px-3 py-2 text-primary dark:text-primary transition-colors" href="#">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                    </svg>
                    <span>Anasayfa</span>
                </a>
         
                <a class="flex items-center gap-3 rounded-md px-3 py-2 text-muted-foreground-light dark:text-muted-foreground-dark hover:bg-primary/10 dark:hover:bg-primary/20 hover:text-foreground-light dark:hover:text-foreground-dark transition-colors" href="#">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                        <polyline points="14 2 14 8 20 8"></polyline>
                        <line x1="16" x2="8" y1="13" y2="13"></line>
                        <line x1="16" x2="8" y1="17" y2="17"></line>
                        <polyline points="10 9 9 9 8 9"></polyline>
                    </svg>
                    <span>Yazılar</span>
                </a>
                <a class="flex items-center gap-3 rounded-md px-3 py-2 text-muted-foreground-light dark:text-muted-foreground-dark hover:bg-primary/10 dark:hover:bg-primary/20 hover:text-foreground-light dark:hover:text-foreground-dark transition-colors" href="#">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
                    </svg>
                    <span>İstatistikler</span>
                </a>
                <a class="flex items-center gap-3 rounded-md px-3 py-2 text-muted-foreground-light dark:text-muted-foreground-dark hover:bg-primary/10 dark:hover:bg-primary/20 hover:text-foreground-light dark:hover:text-foreground-dark transition-colors" href="#">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                    <span>Kullanıcılar</span>
                </a>
            </nav>
            <div class="mt-auto p-4">
                <a class="flex items-center gap-3 rounded-md px-3 py-2 text-muted-foreground-light dark:text-muted-foreground-dark hover:bg-primary/10 dark:hover:bg-primary/20 hover:text-foreground-light dark:hover:text-foreground-dark transition-colors" href="#">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 0 2l-.15.08a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.38a2 2 0 0 0-.73-2.73l-.15-.1a2 2 0 0 1 0-2l.15-.08a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"></path>
                        <circle cx="12" cy="12" r="3"></circle>
                    </svg>
                    <span>Ayarlar</span>
                </a>
            </div>
        </aside>
        <main class="flex-1 p-8 overflow-y-auto">
            <h1 class="text-3xl font-bold text-background-dark dark:text-background-light mb-8">Gösterge Paneli</h1>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
                <div class="bg-background-light dark:bg-background-dark border border-primary/20 dark:border-primary/30 p-6 rounded-lg shadow-sm">
                    <p class="text-base font-medium text-background-dark/80 dark:text-background-light/80">Toplam Yazılar</p>
                    <p class="text-3xl font-bold text-background-dark dark:text-background-light mt-2">@ViewBag.TotalBlogs</p>
                </div>
                <div class="bg-background-light dark:bg-background-dark border border-primary/20 dark:border-primary/30 p-6 rounded-lg shadow-sm">
                    <p class="text-base font-medium text-background-dark/80 dark:text-background-light/80">Yayınlanmış Yazılar</p>
                    <p class="text-3xl font-bold text-background-dark dark:text-background-light mt-2">@ViewBag.PublishedBlogs</p>
                </div>
                <div class="bg-background-light dark:bg-background-dark border border-primary/20 dark:border-primary/30 p-6 rounded-lg shadow-sm">
                    <p class="text-base font-medium text-background-dark/80 dark:text-background-light/80">Taslaklar</p>
                    <p class="text-3xl font-bold text-background-dark dark:text-background-light mt-2">@ViewBag.DraftBlogs</p>
                </div>
            </div>
            <h2 class="text-2xl font-bold text-background-dark dark:text-background-light mb-4">Son Yazılar</h2>
            <div class="overflow-x-auto bg-background-light dark:bg-background-dark border border-primary/20 dark:border-primary/30 rounded-lg shadow-sm">
              
                <table class="w-full text-sm text-left text-background-dark dark:text-background-light">
                    <thead class="text-xs uppercase bg-primary/10 dark:bg-primary/20 text-background-dark dark:text-background-light">
                        <tr>
                            <th class="px-6 py-3" scope="col">Başlık</th>
                            <th class="px-6 py-3" scope="col">Yayın Tarihi</th>
                            <th class="px-6 py-3" scope="col">Durum</th>
                            <!--<th class="px-6 py-3 text-right" scope="col">İşlemler</th -->
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var post in Model)
                        {
                            <tr class="border-b border-primary/10 dark:border-primary/20">
                                <th class="px-6 py-4 font-medium whitespace-nowrap text-background-dark dark:text-background-light" scope="row">
                                    @post.BlogTitle
                                </th>

                                <td class="px-6 py-4 text-background-dark/80 dark:text-background-light/80">
                                    @post.BlogTime.ToString("dd.MM.yyyy")
                                </td>

                                <td class="px-6 py-4">
                                    @if (post.status)
                                    {
                                        <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 dark:bg-green-900 text-green-700 dark:text-green-300">
                                            Yayınlandı
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="px-2 py-1 text-xs font-medium rounded-full bg-yellow-100 dark:bg-yellow-900 text-yellow-700 dark:text-yellow-300">
                                            Taslak
                                        </span>
                                    }
                                </td>

                               <!--<td class="px-6 py-4 text-right">
                                    <a href="@Url.Action("EditBlog", "Admin", new { id = post.Id })" class="inline-flex items-center gap-1 px-2 py-1 rounded-md bg-blue-500/10 text-blue-600 dark:text-blue-300 hover:bg-blue-500/20 transition">
                                        <span class="material-symbols-outlined text-sm">edit</span>
                                        <span class="text-xs font-medium">Düzenle</span>
                                    </a>

                                    <form asp-action="DeleteBlog" asp-controller="Admin" asp-route-id="@post.Id" method="post"
                                          onsubmit="return confirm('Bu yazıyı silmek istediğinizden emin misiniz?');"
                                          class="inline-flex items-center gap-1 px-2 py-1 rounded-md bg-red-500/10 text-red-600 dark:text-red-400 hover:bg-red-500/20 transition">
                                        <span class="material-symbols-outlined text-sm">delete</span>
                                        <button type="submit" class="text-xs font-medium">Sil</button>
                                    </form>
                                 </td> -->
                            </tr>
                        }
                    </tbody>

                </table>
                
            </div>
        </main>
    </div>

</body>
</html>